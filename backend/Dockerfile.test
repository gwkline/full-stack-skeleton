FROM golang:alpine AS builder

WORKDIR /app

# Copy go mod and sum files first to leverage caching
COPY go.mod go.sum ./
RUN go mod download

COPY . .

# Mount Go Module cache
VOLUME /go/pkg/mod
# Mount Go Build cache
VOLUME /root/.cache/go-build

FROM golang:alpine

WORKDIR /app

# Copy the source code and dependencies
COPY --from=builder /app ./

# Set Gin to release mode for testing
ENV GIN_MODE=release

CMD go test ./... -coverprofile=coverage.out